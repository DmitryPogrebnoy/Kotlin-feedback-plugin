<idea-plugin>
    <id>com.github.dmitrypogrebnoy.feedbacktest</id>
    <name>feedback-test</name>
    <vendor>dmitrypogrebnoy</vendor>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService
                serviceImplementation="com.github.dmitrypogrebnoy.feedbacktest.services.MyApplicationService"/>
        <applicationService
                serviceImplementation="com.github.dmitrypogrebnoy.feedbacktest.services.StatisticPersistentStateService"/>
        <projectService serviceImplementation="com.github.dmitrypogrebnoy.feedbacktest.services.MyProjectService"/>
        <typedHandler implementation="com.github.dmitrypogrebnoy.feedbacktest.listeners.MyTypedHandler"/>
    </extensions>

    <applicationListeners>

        <listener class="com.github.dmitrypogrebnoy.feedbacktest.Registrator"
                  topic="com.intellij.ide.AppLifecycleListener"/>
    </applicationListeners>

    <projectListeners>
        <listener class="com.github.dmitrypogrebnoy.feedbacktest.listeners.MyProjectManagerListener"
                  topic="com.intellij.openapi.project.ProjectManagerListener"/>
    </projectListeners>
    <actions>
        <action id="com.github.dmitrypogrebnoy.feedbacktest.action.FeedbackNotificationAction"
                class="com.github.dmitrypogrebnoy.feedbacktest.action.FeedbackNotificationAction"
                text="Feedback Notification"
                description="Action for show feedback notification">
            <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt Q"/>
        </action>
        <action id="com.github.dmitrypogrebnoy.feedbacktest.action.StatisticPluginShow"
                class="com.github.dmitrypogrebnoy.feedbacktest.action.StatisticPluginShow" text="StatisticPluginShow"
                description="Shows statistics collected by the plugin">
            <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt W"/>
        </action>
    </actions>
</idea-plugin>
