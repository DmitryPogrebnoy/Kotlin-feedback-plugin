<idea-plugin>
    <id>com.github.dmitrypogrebnoy.feedbacktest</id>
    <name>feedback-test</name>
    <vendor>dmitrypogrebnoy</vendor>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html -->
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.java</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService
                serviceImplementation="com.github.dmitrypogrebnoy.feedbacktest.services.TasksStatisticService"/>
        <applicationService
                serviceImplementation="com.github.dmitrypogrebnoy.feedbacktest.services.EditRelevantStatisticService"/>
        <applicationService
                serviceImplementation="com.github.dmitrypogrebnoy.feedbacktest.services.EditOldStatisticService"/>
        <applicationService
                serviceImplementation="com.github.dmitrypogrebnoy.feedbacktest.services.DateFeedbackStatService"/>
        <compiler.task execute="AFTER"
                       implementation="com.github.dmitrypogrebnoy.feedbacktest.task.build.time.FinishCompileTime"/>
        <compiler.task execute="BEFORE"
                       implementation="com.github.dmitrypogrebnoy.feedbacktest.task.build.time.StartCompileTime"/>
        <compiler.task execute="BEFORE"
                       implementation="com.github.dmitrypogrebnoy.feedbacktest.task.build.CompileFeedbackNotification"/>
    </extensions>

    <applicationListeners>
        <listener class="com.github.dmitrypogrebnoy.feedbacktest.listeners.VirtualFileListener"
                  topic="com.intellij.openapi.vfs.newvfs.BulkFileListener"/>
        <listener class="com.github.dmitrypogrebnoy.feedbacktest.listeners.EditRelevantStatisticCleaner"
                  topic="com.intellij.ide.AppLifecycleListener"/>
        <listener class="com.github.dmitrypogrebnoy.feedbacktest.listeners.EditOldStatisticCleaner"
                  topic="com.intellij.ide.AppLifecycleListener"/>
    </applicationListeners>

    <projectListeners>
    </projectListeners>

    <actions>
        <action id="com.github.dmitrypogrebnoy.feedbacktest.action.FeedbackNotificationAction"
                class="com.github.dmitrypogrebnoy.feedbacktest.action.FeedbackNotificationAction"
                text="Feedback Notification"
                description="Action for show feedback notification">
            <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt Q"/>
        </action>
        <action id="com.github.dmitrypogrebnoy.feedbacktest.action.StatisticPluginShow"
                class="com.github.dmitrypogrebnoy.feedbacktest.action.StatisticPluginShow" text="StatisticPluginShow"
                description="Shows statistics collected by the plugin">
            <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt W"/>
        </action>
    </actions>
</idea-plugin>
