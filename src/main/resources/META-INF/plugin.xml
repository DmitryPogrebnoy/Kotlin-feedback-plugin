<idea-plugin>
    <id>com.github.dmitrypogrebnoy.kotlinFeedbackPlugin</id>
    <name>Kotlin Feedback</name>
    <vendor>Dmitry Pogrebnoy</vendor>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html -->
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.java</depends>

    <extensions defaultExtensionNs="com.intellij">
        <statusBarWidgetFactory
                id="feedbackWidget"
                implementation="com.github.dmitrypogrebnoy.kotlinFeedbackPlugin.ui.widget.FeedbackStatusBarWidgetFactory"
                order="after inspectionProfileWidget"/>
        <applicationService
                serviceImplementation="com.github.dmitrypogrebnoy.kotlinFeedbackPlugin.state.services.TasksStatisticService"/>
        <applicationService
                serviceImplementation="com.github.dmitrypogrebnoy.kotlinFeedbackPlugin.state.services.EditRelevantStatisticService"/>
        <applicationService
                serviceImplementation="com.github.dmitrypogrebnoy.kotlinFeedbackPlugin.state.services.EditOldStatisticService"/>
        <applicationService
                serviceImplementation="com.github.dmitrypogrebnoy.kotlinFeedbackPlugin.state.services.DateFeedbackStatService"/>
        <compiler.task execute="AFTER"
                       implementation="com.github.dmitrypogrebnoy.kotlinFeedbackPlugin.track.task.build.time.FinishCompileTime"/>
        <compiler.task execute="BEFORE"
                       implementation="com.github.dmitrypogrebnoy.kotlinFeedbackPlugin.track.task.build.time.StartCompileTime"/>
        <compiler.task execute="BEFORE"
                       implementation="com.github.dmitrypogrebnoy.kotlinFeedbackPlugin.show.CompileFeedbackNotification"/>
    </extensions>

    <applicationListeners>
        <listener class="com.github.dmitrypogrebnoy.kotlinFeedbackPlugin.track.edit.VirtualFileListener"
                  topic="com.intellij.openapi.vfs.newvfs.BulkFileListener"/>
        <listener
                class="com.github.dmitrypogrebnoy.kotlinFeedbackPlugin.track.edit.cleaners.EditRelevantStatisticCleaner"
                topic="com.intellij.ide.AppLifecycleListener"/>
        <listener class="com.github.dmitrypogrebnoy.kotlinFeedbackPlugin.track.edit.cleaners.EditOldStatisticCleaner"
                  topic="com.intellij.ide.AppLifecycleListener"/>
    </applicationListeners>

    <projectListeners>
    </projectListeners>

    <actions>
        <action id="com.github.dmitrypogrebnoy.kotlinFeedbackPlugin.show.action.FeedbackNotificationAction"
                class="com.github.dmitrypogrebnoy.kotlinFeedbackPlugin.show.action.FeedbackNotificationAction"
                text="Feedback Notification"
                description="Action for show feedback notification">
            <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt Q"/>
        </action>
        <action id="com.github.dmitrypogrebnoy.kotlinFeedbackPlugin.show.action.StatisticPluginShow"
                class="com.github.dmitrypogrebnoy.kotlinFeedbackPlugin.show.action.StatisticPluginShow"
                text="StatisticPluginShow"
                description="Shows statistics collected by the plugin">
            <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt W"/>
        </action>
    </actions>
</idea-plugin>
